{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "if individual, must have organization",
  "$id": "contact",
  "type": "object",
  "if": {
    "properties": {
      "isOrganization": {
        "const": false
      }
    }
  },
  "then": {
    "required": [
      "memberOfOrganization"
    ],
    "properties": {
      "memberOfOrganization": {
        "$id": "#/properties/memberOfOrganization",
        "type": "array",
        "minItems": 1
      }
    }
  },
  "errorMessage": {
    "if": "Individuals require an organization."
  }
}
