{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Author",
  "description": "Require an author.",
  "$id": "author.json",
  "version": "0.0.1",
  "type": "object",
  "properties": {
    "metadata": {
      "$ref": "#/definitions/Metadata"
    }
  },
  "required": [
    "metadata"
  ],
  "definitions": {
    "Metadata": {
      "type": "object",
      "properties": {
        "resourceInfo": {
          "$ref": "#/definitions/ResourceInfo"
        }
      },
      "required": [
        "resourceInfo"
      ],
      "title": "Metadata"
    },
    "ResourceInfo": {
      "type": "object",
      "if": {
        "properties": {
          "resourceType": {
            "type": "array",
            "contains": {
              "$ref": "#/definitions/ResourceType"
            }
          }
        }
      },
      "then": {
        "properties": {
          "citation": {
            "$ref": "#/definitions/Citation"
          }
        }
      },
      "errorMessage": {
        "if": "Resources require a creation date."
      },
      "required": [
        "citation",
        "resourceType"
      ],
      "title": "ResourceInfo"
    },
    "Citation": {
      "type": "object",
      "properties": {
        "responsibleParty": {
          "type": "array",
          "minItems": 1,
          "contains": {
            "properties": {
              "role": {
                "const": "author"
              }
            }
          },
          "errorMessage": {
            "minItems": "At least one responsibleParty is required in the resource citation.",
            "contains": "At least one author should be list in citation."
          }
        }
      },
      "required": [
        "responsibleParty"
      ],
      "title": "Citation"
    },
    "ResourceType": {
      "type": "object",
      "required": [
        "type"
      ],
      "title": "ResourceType"
    }
  }
}
